{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "MOTBX resource",
  "description": "Schema for resources of the EATRIS Multi-omics Toolbox (MOTBX)",
  "type": "object",
  "properties": {
    "resourceID": {
      "type": "string"
    },
    "resourceCategory": {
      "type": "string",
      "enum": [
        "Epigenomics",
        "External Quality Assessment",
        "Genomics",
        "Internal Quality Control",
        "Metabolomics",
        "Omics data management and analysis",
        "Proteomics",
        "Transcriptomics"
      ]
    },
    "resourceSubcategory": {
      "type": "string",
      "minLength": 4,
      "maxLength": 30
    },
    "resourceTitle": {
      "type": "string",
      "minLength": 15,
      "maxLength": 160
    },
    "resourceDescription": {
      "type": "string",
      "minLength": 50,
      "maxLength": 2500
    },
    "resourceUrl": {
      "type": "string",
      "format": "uri",
      "pattern": "^https://|.pdf$"
    },
    "resourceTags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1
    },
    "resourceKeywords": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  },
  "required": [
    "resourceID",
    "resourceCategory",
    "resourceSubcategory",
    "resourceTitle",
    "resourceDescription",
    "resourceUrl",
    "resourceTags"
  ]
}